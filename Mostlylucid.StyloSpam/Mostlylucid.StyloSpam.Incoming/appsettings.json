{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "StyloSpam": {
    "Incoming": {
      "Smtp": {
        "Enabled": true,
        "ListenHost": "0.0.0.0",
        "ListenPort": 2525,
        "UpstreamHost": "mail.internal.local",
        "UpstreamPort": 25,
        "UseStartTls": true
      },
      "Imap": {
        "Enabled": true,
        "Host": "imap.internal.local",
        "Port": 993,
        "UseSsl": true,
        "Username": "ingest@internal.local"
      },
      "Gmail": {
        "Enabled": true,
        "ProjectId": "your-google-project",
        "UserEmail": "security-inbox@example.com"
      },
      "Outlook": {
        "Enabled": true,
        "TenantId": "your-tenant-id",
        "MailboxUserPrincipalName": "security-inbox@example.com"
      }
    }
  }
}
