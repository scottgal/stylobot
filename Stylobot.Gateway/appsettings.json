{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "Mostlylucid.BotDetection": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Yarp.ReverseProxy": "Information",
        "Mostlylucid.BotDetection": "Information"
      }
    }
  },
  "Gateway": {
    "HttpPort": 8080,
    "AdminBasePath": "/admin",
    "LogLevel": "Information",
    "DemoMode": {
      "Enabled": false,
      "Description": "Demo mode passes ALL bot detection headers to downstream cluster for UI display",
      "PassAllHeaders": true,
      "UseVerboseLogging": true
    }
  },
  "Database": {
    "Provider": "None"
  },
  "BotDetection": {
    "BotThreshold": 0.7,
    "BlockDetectedBots": false,
    "EnableUserAgentDetection": true,
    "EnableHeaderAnalysis": true,
    "EnableIpDetection": true,
    "EnableBehavioralAnalysis": true,
    "LogDetailedReasons": true,
    "LogAllRequests": true,

    "AiDetection": {
      "Provider": "Heuristic",
      "TimeoutMs": 2000,
      "Heuristic": {
        "Enabled": true,
        "LoadLearnedWeights": true,
        "EnableWeightLearning": true
      }
    },

    "ResponseHeaders": {
      "Enabled": true,
      "HeaderPrefix": "X-Bot-",
      "IncludePolicyName": true,
      "IncludeConfidence": true,
      "IncludeDetectors": false,
      "IncludeProcessingTime": true,
      "IncludeBotName": true
    },

    "SecurityTools": {
      "Enabled": true,
      "BlockSecurityTools": true,
      "LogDetections": true
    },

    "Policies": {
      "default": {
        "Description": "Gateway default - fast detection with heuristic",
        "FastPath": ["FastPathReputation", "UserAgent", "Header", "Ip", "SecurityTool", "Behavioral", "Inconsistency", "VersionAge", "ReputationBias", "Heuristic"],
        "SlowPath": [],
        "AiPath": [],
        "UseFastPath": true,
        "EscalateToAi": false,
        "EarlyExitThreshold": 0.85,
        "ImmediateBlockThreshold": 0.95
      },
      "demo": {
        "Description": "DEMO MODE - All fast detectors + advanced fingerprinting + heuristic learning",
        "FastPath": [
          "FastPathReputation",
          "HoneypotLink",
          "UserAgent",
          "Header",
          "Ip",
          "SecurityTool",
          "ProjectHoneypot",
          "CacheBehavior",
          "Behavioral",
          "AdvancedBehavioral",
          "ClientSide",
          "ResponseBehavior",
          "Inconsistency",
          "VersionAge",
          "ReputationBias",
          "Heuristic",
          "TlsFingerprint",
          "TcpIpFingerprint",
          "Http2Fingerprint",
          "MultiLayerCorrelation",
          "BehavioralWaveform"
        ],
        "SlowPath": [],
        "AiPath": [],
        "UseFastPath": true,
        "EscalateToAi": false,
        "BypassTriggerConditions": true,
        "Tags": ["demo", "all-detectors", "learning-enabled", "full-fingerprinting"]
      }
    },
    "PathPolicies": {
      "/*": "default"
    }
  }
}
