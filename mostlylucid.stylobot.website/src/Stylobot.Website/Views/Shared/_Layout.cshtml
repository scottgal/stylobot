@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env
@using Stylobot.Website.Models
@{
    var seoMetadata = ViewData["SeoMetadata"] as SeoMetadata ?? new SeoMetadata();
}
<!DOCTYPE html>
<html lang="en" class="dark" data-theme="dark" x-data="themeSwitcher()" x-init="init()">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO Meta Tags -->
    @await Html.PartialAsync("_SeoMetaTags", seoMetadata)

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Google Fonts: Raleway -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@800;900&display=swap" rel="stylesheet">

    <!-- Built CSS (watch mode rebuilds on changes) -->
    <link rel="stylesheet" href="/dist/assets/index.css" asp-append-version="true" />
</head>
<body class="min-h-screen flex flex-col">
    <header class="sticky top-0 z-[9999] bg-base-100/95 backdrop-blur-md border-b border-base-300 shadow-lg">
        <nav class="max-w-7xl mx-auto px-4 py-2" x-data="{ mobileMenuOpen: false }">
            <div class="flex items-center justify-between gap-4">
                <!-- Logo + Brand -->
                <a asp-area="" asp-controller="Home" asp-action="Index" class="flex items-center gap-3 flex-shrink-0">
                    <img src="/img/logo.png" alt="stylobot Logo" class="h-14 w-auto" />
                    <span class="text-2xl font-semibold hidden sm:inline" style="font-family: 'Raleway', sans-serif;">
                        <span class="stylo-text" style="font-style: italic;">stylo</span><span class="bot-text">bot</span>
                    </span>
                </a>

                <!-- Desktop Navigation -->
                <div class="hidden lg:flex items-center gap-6">
                    <ul class="flex items-center gap-6">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index" class="font-medium hover:text-primary transition-colors">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Features" class="font-medium hover:text-primary transition-colors">Features</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Detectors" class="font-medium hover:text-primary transition-colors">Detectors</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Enterprise" class="font-medium hover:text-primary transition-colors">Enterprise</a></li>
                        <li><a href="#pricing" class="font-medium hover:text-primary transition-colors">Pricing</a></li>
                        <li><a href="https://github.com/scottgal/mostlylucid.nugetpackages/blob/main/Mostlylucid.BotDetection/README.md" target="_blank" class="font-medium hover:text-primary transition-colors">Docs</a></li>
                    </ul>
                    <div class="flex items-center gap-3">
                        <div class="tooltip tooltip-bottom" data-tip="Coming Soon">
                            <button class="btn btn-primary btn-sm" disabled>Get Started</button>
                        </div>
                    </div>
                </div>

                <!-- Mobile Menu Button -->
                <div class="lg:hidden">
                    <button @@click="mobileMenuOpen = !mobileMenuOpen" class="btn btn-ghost btn-square">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile Navigation Dropdown -->
            <div x-show="mobileMenuOpen"
                 x-transition
                 @@click.away="mobileMenuOpen = false"
                 class="absolute top-full left-0 right-0 bg-base-100 border-b border-base-300 shadow-lg lg:hidden">
                <ul class="menu p-4">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Detectors">Detectors</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Enterprise">Enterprise</a></li>
                    <li><a href="#pricing">Pricing</a></li>
                    <li><a href="https://github.com/scottgal/mostlylucid.nugetpackages/blob/main/Mostlylucid.BotDetection/README.md" target="_blank">Docs</a></li>
                    <li class="mt-2">
                        <div class="tooltip tooltip-right" data-tip="Coming Soon">
                            <button class="btn btn-primary w-full" disabled>Get Started</button>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="flex-1">
        @RenderBody()
    </main>

    <footer class="bg-base-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 py-12">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div class="col-span-1 md:col-span-2">
                    <div class="flex items-center gap-3 mb-4">
                        <img src="/img/logo.png" alt="stylobot Logo" class="h-10 w-10" />
                        <span class="text-2xl font-semibold" style="font-family: 'Raleway', sans-serif;">
                            <span class="stylo-text" style="font-style: italic;">stylo</span><span class="bot-text">bot</span>
                        </span>
                    </div>
                    <p class="text-base-content/70 max-w-md">
                        Heuristics and advanced analytics for bot detection using a zero-PII approach. Protect your platform without compromising user privacy.
                    </p>
                </div>

                <div>
                    <h3 class="font-semibold mb-4">Product</h3>
                    <ul class="space-y-2 text-base-content/70">
                        <li><a asp-area="" asp-controller="Home" asp-action="Features" class="hover:text-primary transition-colors" hx-get="/Home/Features" hx-target="main" hx-push-url="true">Features</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Detectors" class="hover:text-primary transition-colors" hx-get="/Home/Detectors" hx-target="main" hx-push-url="true">Detectors</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Enterprise" class="hover:text-primary transition-colors" hx-get="/Home/Enterprise" hx-target="main" hx-push-url="true">Enterprise</a></li>
                        <li><a href="https://github.com/scottgal/mostlylucid.nugetpackages/blob/main/Mostlylucid.BotDetection/README.md" target="_blank" class="hover:text-primary transition-colors">Documentation</a></li>
                    </ul>
                </div>

                <div>
                    <h3 class="font-semibold mb-4">Company</h3>
                    <ul class="space-y-2 text-base-content/70">
                        <li><a href="https://www.mostlylucid.net" target="_blank" class="hover:text-primary transition-colors">About</a></li>
                        <li><a href="https://www.mostlylucid.net" target="_blank" class="hover:text-primary transition-colors">Blog</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="hover:text-primary transition-colors" hx-get="/Home/Privacy" hx-target="main" hx-push-url="true">Privacy</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact" class="hover:text-primary transition-colors" hx-get="/Home/Contact" hx-target="main" hx-push-url="true">Contact</a></li>
                    </ul>
                </div>
            </div>

            <div class="divider"></div>

            <div class="text-center text-base-content/60 text-sm">
                &copy; 2025 Stylobot. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Built JS (watch mode rebuilds on changes) -->
    <script type="module" src="/dist/assets/index.js" asp-append-version="true"></script>
    <script defer src="https://umami.mostlylucid.net/getinfo" data-website-id="553967ea-c3de-4212-9b07-6d756c0f58b7"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
