@using Mostlylucid.BotDetection.UI.Services
@model IReadOnlyList<CachedVisitor>

@if (Model.Count > 0)
{
    <div class="flex flex-wrap gap-2">
        @foreach (var bot in Model)
        {
            <a href="/Home/LiveDemo?sig=@bot.PrimarySignature"
               class="badge badge-error badge-outline gap-1 text-xs hover:bg-error hover:text-white transition-colors">
                @(bot.BotName ?? bot.PrimarySignature[..Math.Min(8, bot.PrimarySignature.Length)])
                <span class="font-bold">@bot.Hits</span>
            </a>
        }
    </div>
}
else
{
    <div class="text-xs text-base-content/30 italic">No bot activity detected yet</div>
}
