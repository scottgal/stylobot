}

<!-- Hero Section -->
<section class="bg-gradient-to-br from-primary/5 via-base-100 to-secondary/5 py-8 lg:py-12">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center max-w-4xl mx-auto">
            <div class="badge badge-primary mb-4">Detection Arsenal</div>
