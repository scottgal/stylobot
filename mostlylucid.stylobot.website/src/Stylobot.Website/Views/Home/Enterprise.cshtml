@{
    ViewData["Title"] = "Enterprise Bot Protection";
}

<!-- Hero Section -->
<section class="marketing-hero">
    <div class="marketing-container relative z-10">
        <div class="text-center max-w-4xl mx-auto mb-8">
            <div class="marketing-eyebrow">Enterprise</div>
            <a href="/" class="brand-chip no-underline hover:opacity-80 transition-opacity">
                <img src="/img/stylowall.svg" alt="stylo bot mark" class="logo-adaptive" />
                <span class="brand-chip-label"><span class="stylo-text brand-italic">stylo</span><span class="bot-text">bot</span></span>
            </a>
            <h1 class="marketing-title">
                Enterprise-Grade <span class="hero-accent-text">Bot Defense</span>
            </h1>
            <p class="marketing-lead mb-6">
                Operational bot defense for high-traffic platforms that need explainable decisions, strict privacy posture, and predictable performance at scale.
            </p>
            <p class="text-sm text-base-content/70 mb-6">
                Start with the open-source core and free feature set today, then layer enterprise controls, support, and governance as your risk profile grows.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="#contact" class="btn btn-primary btn-lg px-8">Start With Us</a>
                <a href="#features" class="btn btn-outline btn-lg px-8">Explore Capabilities</a>
            </div>
        </div>

        <!-- Enterprise Stats -->
        <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
            <div class="stat bg-base-200 rounded-box text-center">
                <div class="stat-value text-primary">99.99%</div>
                <div class="stat-title">Uptime SLA</div>
            </div>
            <div class="stat bg-base-200 rounded-box text-center">
                <div class="stat-value text-secondary">&lt;5ms</div>
                <div class="stat-title">Latency</div>
            </div>
            <div class="stat bg-base-200 rounded-box text-center">
                <div class="stat-value text-accent">24/7</div>
                <div class="stat-title">Support</div>
            </div>
            <div class="stat bg-base-200 rounded-box text-center">
                <div class="stat-value text-primary">∞</div>
                <div class="stat-title">Scale</div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_TrustStrip")

<!-- Enterprise Features -->
<section id="features" class="py-12 bg-base-100">
    <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-xl lg:text-2xl font-bold mb-4">
                Enterprise <span class="text-primary">Features</span>
            </h2>
            <p class="text-sm text-base-content/70 max-w-3xl mx-auto">
                Everything you need to protect your platform at scale
            </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Premium Detectors -->
