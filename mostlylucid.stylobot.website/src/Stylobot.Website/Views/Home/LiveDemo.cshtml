    ViewData["Title"] = "Live Demo - Real-Time Bot Detection";
}

<!-- Dashboard iframe -->
<section class="bg-base-100" style="min-height: 80vh;">
    <iframe src="/_stylobot?embed=1"
            class="w-full border-0"
            style="min-height: 80vh; height: 100%;"
            title="StyloBot Detection Dashboard"
            loading="eager"
            allow="clipboard-write">
    </iframe>
</section>

