@{
    ViewData["Title"] = "Bot Detection Intelligence - All the Data, Your Decision";
    var web3FormsKey = Configuration["Web3Forms:AccessKey"];

    // Extract detection data from this page request
    var evidence = Context.Items["BotDetection.AggregatedEvidence"] as AggregatedEvidence;
    var botProb = evidence?.BotProbability ?? 0;
    var confidence = evidence?.Confidence ?? 0;
    var riskBand = evidence?.RiskBand.ToString() ?? "Unknown";
    var procTime = evidence?.TotalProcessingTimeMs ?? 0;
    var detectorCount = evidence?.Contributions.Select(c => c.DetectorName).Distinct().Count() ?? 0;
    var topReason = evidence?.Contributions
        .Where(c => !string.IsNullOrWhiteSpace(c.Reason))
        .OrderByDescending(c => Math.Abs(c.ConfidenceDelta * c.Weight))
        .FirstOrDefault()?.Reason ?? "";

    // Extract geo data from signals
    var countryCode = "";
    var countryName = "";
    var city = "";
    var timezone = "";
    var isVpn = false;
    var isHosting = false;
    if (evidence?.Signals != null)
    {
        if (evidence.Signals.TryGetValue("geo.country_code", out var cc)) countryCode = cc?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("geo.country_name", out var cn)) countryName = cn?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("geo.city", out var ci)) city = ci?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("geo.timezone", out var tz)) timezone = tz?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("geo.is_vpn", out var vpn)) isVpn = vpn is true || vpn?.ToString() == "True";
        if (evidence.Signals.TryGetValue("geo.is_hosting", out var host)) isHosting = host is true || host?.ToString() == "True";
    }

    // Fallback: try the GeoLocation from context
    if (string.IsNullOrEmpty(countryCode))
    {
        var geoLoc = Context.Items["GeoLocation"] as GeoLocation;
        if (geoLoc != null)
        {
            countryCode = geoLoc.CountryCode ?? "";
            countryName = geoLoc.CountryName ?? "";
            city = geoLoc.City ?? "";
            timezone = geoLoc.TimeZone ?? "";
            isVpn = geoLoc.IsVpn;
            isHosting = geoLoc.IsHosting;
        }
    }

    // Extract signature data
    var primarySig = "";
    var sigFactorCount = 0;
    var hasClientFingerprint = false;
    if (Context.Items.TryGetValue("BotDetection.Signatures", out var sigObj) && sigObj is string sigJson)
    {
        try
        {
            var sigs = JsonSerializer.Deserialize<Dictionary<string, string>>(sigJson);
            if (sigs != null)
            {
                primarySig = sigs.GetValueOrDefault("primary") ?? "";
                sigFactorCount = sigs.Count(s => !string.IsNullOrEmpty(s.Value) && s.Key != "primary");
                hasClientFingerprint = !string.IsNullOrEmpty(sigs.GetValueOrDefault("clientSide"));
            }
        }
        catch { }
    }

    // Fallback: generate signature from IP+UA (same as DetectionDataExtractor)
    if (string.IsNullOrEmpty(primarySig))
    {
        var ip = Context.Connection.RemoteIpAddress?.ToString() ?? "";
        var ua = Context.Request.Headers.UserAgent.ToString();
        if (!string.IsNullOrEmpty(ip) || !string.IsNullOrEmpty(ua))
        {
            var hash = SHA256.HashData(Encoding.UTF8.GetBytes($"{ip}:{ua}"));
            primarySig = Convert.ToHexString(hash)[..16].ToLowerInvariant();
        }
    }

    // Country display: handle private/local networks
    var isPrivateNetwork = string.IsNullOrEmpty(countryCode) ||
                           countryCode.Equals("XX", StringComparison.OrdinalIgnoreCase) ||
                           countryName.Contains("Private", StringComparison.OrdinalIgnoreCase) ||
                           countryName.Contains("Reserved", StringComparison.OrdinalIgnoreCase);
    if (isPrivateNetwork && string.IsNullOrEmpty(countryName))
    {
        countryName = "Local Network";
    }

    // TLS / HTTP protocol info from signals
    var tlsProtocol = "";
    var httpProtocol = "";
    var h2ClientType = "";
    var osHint = "";
    if (evidence?.Signals != null)
    {
        if (evidence.Signals.TryGetValue("tls.protocol", out var tp)) tlsProtocol = tp?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("h2.protocol", out var hp)) httpProtocol = hp?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("h2.client_type", out var ct)) h2ClientType = ct?.ToString() ?? "";
        if (evidence.Signals.TryGetValue("tcp.os_hint", out var os)) osHint = os?.ToString() ?? "";
    }
}

