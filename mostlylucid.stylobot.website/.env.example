# ===========================================
# Stylobot Website Configuration
# ===========================================
# Copy this file to .env and customize values

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5062

# ===========================================
# Bot Detection Configuration
# ===========================================

# Detection thresholds
BOTDETECTION_THRESHOLD=0.7
BOTDETECTION_BLOCK_BOTS=false
BOTDETECTION_LOG_DETAILED=true
BOTDETECTION_LOG_ALL_REQUESTS=true

# Response headers (show detection info in responses)
BOTDETECTION_HEADERS_ENABLED=true
BOTDETECTION_HEADERS_CONFIDENCE=true
BOTDETECTION_HEADERS_DETECTORS=true
BOTDETECTION_HEADERS_PROCESSING_TIME=true

# ===========================================
# Client-Side Fingerprinting
# ===========================================
BOTDETECTION_CLIENTSIDE_ENABLED=true
BOTDETECTION_CLIENTSIDE_CANVAS=true
BOTDETECTION_CLIENTSIDE_WEBGL=true
BOTDETECTION_CLIENTSIDE_AUDIO=true

# Token secret for client-side fingerprinting (generate a random string)
BOTDETECTION_CLIENTSIDE_TOKEN_SECRET=change-me-to-random-secret

# ===========================================
# LLM / AI Detection Configuration
# ===========================================

# AI Provider: Heuristic (fast, no dependencies) or Ollama (local LLM)
BOTDETECTION_AI_PROVIDER=Heuristic

# Ollama Configuration (when using Ollama provider)
# Can be local or remote - just point to your Ollama endpoint
BOTDETECTION_OLLAMA_ENDPOINT=http://localhost:11434
BOTDETECTION_OLLAMA_MODEL=llama3.2:1b
BOTDETECTION_OLLAMA_TIMEOUT_MS=5000

# ===========================================
# Signature & Privacy Settings
# ===========================================

# HMAC key for hashing signatures (IMPORTANT: set in production!)
BOTDETECTION_SIGNATURE_HASH_KEY=change-me-to-random-secret-for-production

# ===========================================
# Dashboard Configuration
# ===========================================
STYLOBOT_DASHBOARD_PATH=/_stylobot
STYLOBOT_DASHBOARD_MAX_EVENTS=1000

# ===========================================
# Database Configuration (optional)
# ===========================================

# PostgreSQL/TimescaleDB for persistent storage
DATABASE_PROVIDER=InMemory
DATABASE_CONNECTION_STRING=Host=localhost;Database=stylobot;Username=stylobot;Password=stylobot_password

# Enable TimescaleDB features
DATABASE_TIMESCALEDB_ENABLED=false
DATABASE_AUTO_INIT_SCHEMA=true
DATABASE_RETENTION_DAYS=30

# ===========================================
# External Services
# ===========================================

# Project Honeypot (optional - for IP reputation)
PROJECT_HONEYPOT_API_KEY=

# ===========================================
# Docker Volume Paths (for containerized deployment)
# ===========================================
DATA_PATH=/app/data
LOGS_PATH=/app/logs
CONFIG_PATH=/app/config
