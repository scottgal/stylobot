@using Mostlylucid.BotDetection.UI.Models
@model SummaryStatsModel
@{
    var s = Model.Summary;
    var botPct = s.TotalRequests > 0 ? ((double)s.BotRequests / s.TotalRequests * 100).ToString("F1") : "0.0";
}
<div id="summary-stats"
     data-sb-widget="summary"
     data-sb-depends="summary"
     class="flex flex-wrap items-center gap-x-4 gap-y-1 px-3 py-2 rounded-lg text-sm"
     style="background: var(--sb-card-bg); border: 1px solid var(--sb-card-border);">

    <span class="font-bold text-base-content">@s.TotalRequests.ToString("N0")</span>
    <span class="text-base-content/50 text-xs">total</span>

    <span style="color: var(--sb-card-divider);">|</span>

    <span class="font-bold text-error">@s.BotRequests.ToString("N0")</span>
    <span class="text-xs text-error/70">bots (@(botPct)%)</span>

    <span style="color: var(--sb-card-divider);">|</span>

    <span class="font-bold text-success">@s.HumanRequests.ToString("N0")</span>
    <span class="text-xs text-base-content/50">human</span>

    <span style="color: var(--sb-card-divider);">|</span>

    <span class="font-bold text-base-content">@s.UniqueSignatures.ToString("N0")</span>
    <span class="text-xs text-base-content/50">signatures</span>
</div>
