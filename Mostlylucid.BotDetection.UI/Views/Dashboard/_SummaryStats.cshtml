@using Mostlylucid.BotDetection.UI.Models
@model SummaryStatsModel
@{
    var s = Model.Summary;
    var botPct = s.TotalRequests > 0 ? ((double)s.BotRequests / s.TotalRequests * 100).ToString("F1") : "0.0";
}
<div id="summary-stats"
     data-sb-widget="summary"
     data-sb-depends="summary"
     class="grid grid-cols-2 sm:grid-cols-4 gap-3">

    <div class="card bg-base-200 transition-all duration-200">
        <div class="card-body p-3">
            <div class="text-2xl font-black text-base-content">@s.TotalRequests.ToString("N0")</div>
            <div class="text-xs text-base-content/50 font-medium">Total Requests</div>
        </div>
    </div>

    <div class="card bg-base-200 transition-all duration-200">
        <div class="card-body p-3">
            <div class="text-2xl font-black text-error">@s.BotRequests.ToString("N0")</div>
            <div class="text-xs text-base-content/50 font-medium">Bot Requests <span class="text-error">(@(botPct)%)</span></div>
        </div>
    </div>

    <div class="card bg-base-200 transition-all duration-200">
        <div class="card-body p-3">
            <div class="text-2xl font-black text-success">@s.HumanRequests.ToString("N0")</div>
            <div class="text-xs text-base-content/50 font-medium">Human Requests</div>
        </div>
    </div>

    <div class="card bg-base-200 transition-all duration-200">
        <div class="card-body p-3">
            <div class="text-2xl font-black text-base-content">@s.UniqueSignatures.ToString("N0")</div>
            <div class="text-xs text-base-content/50 font-medium">Unique Signatures</div>
        </div>
    </div>
</div>
