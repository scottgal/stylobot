@using Mostlylucid.BotDetection.UI.Models
@model YourDetectionModel
@{
    var riskClass = Model.RiskBand switch {
        "VeryHigh" or "High" => "text-error",
        "Medium" or "Elevated" => "text-warning",
        _ => "text-success"
    };
    var probPct = (Model.BotProbability * 100).ToString("F1");
    var confPct = (Model.Confidence * 100).ToString("F0");
}
<div id="your-detection"
     data-sb-widget="your-detection"
     data-sb-depends="summary,@(Model.Signature ?? "")"
     class="card bg-base-200 transition-all duration-200">
    <div class="card-body p-3">
        <div class="flex items-center justify-between">
            <h3 class="text-xs font-bold text-base-content flex items-center gap-2">
                Your Detection
                @if (Model.HasData)
                {
                    @if (Model.IsBot)
                    {
                        <span class="badge badge-xs badge-error">Bot</span>
                    }
                    else
                    {
                        <span class="badge badge-xs badge-success">Human</span>
                    }
                }
            </h3>
            @if (Model.HasData && !string.IsNullOrEmpty(Model.Signature))
            {
                <a href="@Model.BasePath/signature/@Uri.EscapeDataString(Model.Signature)" class="text-[10px] underline text-base-content/40 hover:text-base-content/60">Details</a>
            }
        </div>

        @if (!Model.HasData)
        {
            <div class="text-[11px] text-base-content/40 py-2 text-center">
                Waiting for detection data&hellip; Visit another page first.
            </div>
        }
        else
        {
            <!-- Stats row -->
            <div class="flex items-center gap-4 mt-1.5">
                <div class="text-center">
                    <span class="text-sm font-black @riskClass">@(probPct)%</span>
                    <div class="text-[9px] text-base-content/50">Score</div>
                </div>
                <div class="text-center">
                    <span class="text-sm font-black text-base-content">@(confPct)%</span>
                    <div class="text-[9px] text-base-content/50">Conf</div>
                </div>
                <div class="text-center">
                    <span class="text-sm font-black @riskClass">@Model.RiskBand</span>
                    <div class="text-[9px] text-base-content/50">Risk</div>
                </div>
                @if (Model.ThreatBand != null && Model.ThreatBand != "None")
                {
                    <div class="text-center">
                        <span class="text-sm font-black @(Model.ThreatBand is "Critical" or "High" ? "text-error" : "text-warning")">
                            @Model.ThreatBand@(Model.ThreatScore.HasValue ? $" ({Model.ThreatScore.Value:F0})" : "")
                        </span>
                        <div class="text-[9px] text-base-content/50">Threat</div>
                    </div>
                }
                <div class="ml-auto text-[9px] text-base-content/30">
                    @Model.DetectorCount det &middot; @Model.ProcessingTimeMs.ToString("F1")ms
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Narrative))
            {
                <div class="mt-1.5 text-[11px] text-base-content/60 italic line-clamp-2">@Model.Narrative</div>
            }

            @if (Model.TopReasons.Count > 0)
            {
                <div class="mt-1.5 flex flex-wrap gap-x-3 gap-y-0.5">
                    @foreach (var reason in Model.TopReasons.Take(3))
                    {
                        <span class="text-[10px] text-base-content/50">&bull; @reason</span>
                    }
                </div>
            }
        }
    </div>
</div>
