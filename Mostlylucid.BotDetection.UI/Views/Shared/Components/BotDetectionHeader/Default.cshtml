@model Mostlylucid.BotDetection.UI.Models.DetectionDisplayModel
@using Mostlylucid.BotDetection.UI.Models

@* Unified Bot Detection Header - single slim bar with your detection + live ticker *@
@{
    var hubPath = "/_stylobot/hub";
    var initialSignature = Model.Signatures?.PrimarySignature ?? "";
    var cspNonce = ViewContext.HttpContext.Items["CspNonce"]?.ToString() ?? string.Empty;
}

<div class="stylobot-header"
     data-sb-widget="header"
     data-sb-depends="signature,summary"
     x-data="styloBotHeader()"
     x-init="init()"
     x-cloak>

    <!-- Single Slim Bar -->
    <div class="stylobot-header-bar">
        <!-- Left: Your Detection Status -->
        <div class="stylobot-header-you" @@click="expanded = !expanded" title="Click to expand details">
            <span class="stylobot-header-icon" :class="{ 'is-bot': isBot }">
                <span x-text="isBot ? 'R' : 'H'"></span>
            </span>
            <span class="stylobot-header-label" :class="isBot ? 'is-bot' : 'is-human'"
                  x-text="isBot ? 'Bot' : 'Human'"></span>
            <span class="stylobot-header-prob" :class="{ 'pulse-update': justUpdated }"
                  x-text="Math.round(botProbability * 100) + '%'"></span>
            <span class="stylobot-header-risk" :class="'risk-' + (riskBand || 'unknown').toLowerCase()"
                  x-text="riskBand || 'Unknown'"></span>
            <span class="stylobot-header-time" x-text="(processingTimeMs || 0).toFixed(0) + 'ms'"></span>
            <span class="stylobot-header-hits" x-show="hitCount > 1" :class="{ 'pulse-update': justUpdated }"
                  x-text="'x' + hitCount"></span>
            <span class="stylobot-header-expand" x-text="expanded ? '[-]' : '[+]'"></span>
        </div>

        <!-- Divider -->
        <span class="stylobot-header-divider"></span>

        <!-- Center: Compact Ticker (recent detections scroll) -->
        <div class="stylobot-header-ticker">
            <template x-if="!connected && tickerItems.length === 0">
                <span class="stylobot-header-ticker-empty">Connecting...</span>
            </template>
            <template x-for="(item, idx) in tickerItems" :key="item._id || idx">
                <a class="stylobot-header-ticker-item"
                   :href="'/_stylobot/signature/' + encodeURIComponent(item.primarySignature || '')"
                   :class="{ 'is-bot': item.isBot, 'ticker-new': item._isNew }">
                    <span class="ticker-icon-sm" x-text="item.isBot ? 'R' : 'H'"></span>
                    <span class="ticker-narrative-sm"
                          x-text="item.narrative || item.botName || ((item.isBot ? 'Bot' : 'Human') + ' ' + Math.round((item.botProbability || 0) * 100) + '%')"></span>
                </a>
            </template>
        </div>

        <!-- Right: Live indicator + Dashboard link -->
        <div class="stylobot-header-right">
            <span class="stylobot-header-live" x-show="connected">LIVE</span>
            <a href="/_stylobot" class="stylobot-header-dashboard" title="Open Dashboard">Dashboard</a>
        </div>
    </div>

    <!-- Expanded Details Panel -->
    <div x-show="expanded" x-transition class="stylobot-header-details">
        <div class="stylobot-header-details-grid">
            <!-- Your Signature -->
            <div class="stylobot-header-section">
                <div class="section-title">Your Signature</div>
                <div class="section-content">
                    <div><span class="section-label">ID:</span> <code x-text="(signature || '').substring(0, 12) + '...'"></code></div>
                    <div><span class="section-label">Hits:</span> <span x-text="hitCount"></span></div>
                    <div class="section-note">HMAC-SHA256 hashed, zero PII</div>
                </div>
            </div>

            <!-- Detection Stats -->
            <div class="stylobot-header-section">
                <div class="section-title">Detection</div>
                <div class="section-content">
                    <div><span class="section-label">Probability:</span> <span x-text="((botProbability || 0) * 100).toFixed(1) + '%'"></span></div>
                    <div><span class="section-label">Confidence:</span> <span x-text="((confidence || 0) * 100).toFixed(1) + '%'"></span></div>
                    <div><span class="section-label">Processing:</span> <span x-text="(processingTimeMs || 0).toFixed(1) + 'ms'"></span></div>
                </div>
            </div>

            <!-- Top Signal -->
            <div class="stylobot-header-section">
                <div class="section-title">Top Signal</div>
                <div class="section-content">
                    <div x-text="topSignal || 'No signals'"></div>
                </div>
            </div>

            <!-- Live Stats -->
            <div class="stylobot-header-section">
                <div class="section-title">Live Feed</div>
                <div class="section-content">
                    <div x-show="connected" style="color: #51cf66;">SignalR Connected</div>
                    <div x-show="!connected" style="color: #ff6b6b;">Connecting...</div>
                    <div>Updates: <span x-text="updateCount"></span></div>
                    <div>Ticker items: <span x-text="tickerItems.length"></span></div>
                </div>
            </div>
        </div>

        <div class="stylobot-header-details-footer">
            <a :href="'/_stylobot/signature/' + encodeURIComponent(signature || '')" class="dashboard-link">
                View Full Dashboard & All Signals &rarr;
            </a>
        </div>
    </div>
</div>

<script nonce="@cspNonce">
document.addEventListener('alpine:init', () => {
    // PascalCase to camelCase helper
    function toCamel(obj) {
        if (Array.isArray(obj)) return obj.map(toCamel);
        if (obj !== null && typeof obj === 'object') {
            return Object.fromEntries(
                Object.entries(obj).map(([k, v]) => [k.charAt(0).toLowerCase() + k.slice(1), toCamel(v)])
            );
        }
        return obj;
    }

    let tickerId = 0;

    Alpine.data('styloBotHeader', () => ({
        // Your detection state (from server)
        signature: '@initialSignature',
        isBot: @(Model.IsBot ? "true" : "false"),
        botProbability: @Model.BotProbability.ToString(System.Globalization.CultureInfo.InvariantCulture),
        confidence: @Model.Confidence.ToString(System.Globalization.CultureInfo.InvariantCulture),
        riskBand: '@(Model.RiskBand ?? "Unknown")',
        processingTimeMs: @Model.ProcessingTimeMs.ToString(System.Globalization.CultureInfo.InvariantCulture),
        topSignal: '@(Model.TopReasons.FirstOrDefault()?.Replace("'", "\\'") ?? "No signals")',

        // Dynamic state
        hitCount: 1,
        expanded: false,
        connected: false,
        connection: null,
        updateCount: 0,
        justUpdated: false,
        tickerItems: [],
        maxTickerItems: 8,

        async init() {
            await this.connect();
        },

        async connect() {
            try {
                if (typeof signalR === 'undefined') {
                    await new Promise((resolve, reject) => {
                        const s = document.createElement('script');
                        s.src = 'https://cdn.jsdelivr.net/npm/@@microsoft/signalr@@8.0.0/dist/browser/signalr.min.js';
                        s.onload = resolve;
                        s.onerror = reject;
                        document.head.appendChild(s);
                    });
                }

                this.connection = new signalR.HubConnectionBuilder()
                    .withUrl('@hubPath')
                    .withAutomaticReconnect([0, 2000, 5000, 10000, 30000])
                    .configureLogging(signalR.LogLevel.Warning)
                    .build();

                // Beacon-only: SignalR sends lightweight invalidation signals.
                // The header shows YOUR detection from the initial page render.
                // Live ticker updates are handled by the HTMX coordinator on dashboard pages.
                this.connection.on('BroadcastInvalidation', () => {});

                this.connection.onclose(() => { this.connected = false; });
                this.connection.onreconnecting(() => { this.connected = false; });
                this.connection.onreconnected(() => { this.connected = true; });

                await this.connection.start();
                this.connected = true;
            } catch (error) {
                console.error('[StyloBot] Connection failed:', error);
                this.connected = false;
            }
        },

        updateYourDetection(d) {
            this.isBot = d.isBot;
            this.botProbability = d.botProbability || 0;
            this.confidence = d.confidence || 0;
            this.riskBand = d.riskBand || 'Unknown';
            this.processingTimeMs = d.processingTimeMs || 0;
            if (d.topReasons && d.topReasons.length > 0) {
                this.topSignal = d.topReasons[0];
            }
            this.updateCount++;
            this.justUpdated = true;
            setTimeout(() => { this.justUpdated = false; }, 500);
        },

        addToTicker(d) {
            // Deduplicate by signature - update existing entries, only add genuinely new signatures
            const sig = d.primarySignature;
            if (sig) {
                const existing = this.tickerItems.find(i => i.primarySignature === sig);
                if (existing) {
                    // Update in-place: certainty may have changed
                    existing.isBot = d.isBot;
                    existing.botProbability = d.botProbability;
                    existing.riskBand = d.riskBand;
                    existing.botName = d.botName;
                    existing._isNew = true;
                    setTimeout(() => { existing._isNew = false; }, 600);
                    return;
                }
            }

            // New unique signature
            this.tickerItems.unshift({
                ...d,
                _id: ++tickerId,
                _isNew: true
            });

            const currentId = tickerId;
            setTimeout(() => {
                const item = this.tickerItems.find(i => i._id === currentId);
                if (item) item._isNew = false;
            }, 600);

            if (this.tickerItems.length > this.maxTickerItems) {
                this.tickerItems = this.tickerItems.slice(0, this.maxTickerItems);
            }
        }
    }));
});
</script>

