{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5090"
      }
    }
  },
  "BotDetection": {
    "BotThreshold": 0.7,
    "EnableLlmDetection": false,
    "ResponseHeaders": {
      "Enabled": true,
      "IncludeConfidence": true,
      "IncludeDetectors": true,
      "IncludeProcessingTime": true
    },
    "Qdrant": {
      "Enabled": false
    },
    "ActionPolicies": {
      "api-block": {
        "Type": "Block",
        "StatusCode": 403,
        "Message": "Bot traffic is not allowed on this endpoint.",
        "IncludeRiskScore": true,
        "Description": "Hard block for API endpoints"
      },
      "api-throttle": {
        "Type": "Throttle",
        "BaseDelayMs": 500,
        "MaxDelayMs": 5000,
        "JitterPercent": 0.3,
        "ScaleByRisk": true,
        "IncludeHeaders": false,
        "Description": "Stealth throttle â€” bots get progressively slower responses"
      },
      "shadow-mode": {
        "Type": "LogOnly",
        "LogLevel": "Information",
        "AddResponseHeaders": true,
        "IncludeDetailedHeaders": true,
        "LogFullEvidence": true,
        "Description": "Detection runs, results in headers, but nothing is blocked"
      }
    }
  }
}
