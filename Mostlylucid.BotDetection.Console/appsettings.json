{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Yarp": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning",
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "Gateway": {
    "Mode": "demo",
    "Port": "5000",
    "Upstream": "http://localhost:8080"
  },
  "SignatureLogging": {
    "Enabled": true,
    "MinConfidence": 0.7,
    "PrettyPrintJsonLd": true,
    "SignatureHashKey": "CHANGE_ME_IN_PRODUCTION_USE_SECURE_RANDOM_KEY_HERE"
  },
  "BotDetection": {
    "DefaultPolicyName": "demo",
    "DefaultActionPolicyName": "logonly",
    "EnableLearning": false,
    "Policies": {
      "demo": {
        "Description": "DEMO MODE - Full logging, all fast detectors, no blocking",
        "FastPath": [
          "FastPathReputation",
          "UserAgent",
          "Header",
          "Ip",
          "SecurityTool",
          "CacheBehavior",
          "Behavioral",
          "ClientSide",
          "Inconsistency",
          "VersionAge"
        ],
        "SlowPath": [],
        "AiPath": [],
        "ResponsePath": [
          "ResponseBehavior"
        ],
        "UseFastPath": true,
        "ForceSlowPath": false,
        "EarlyExitThreshold": 1.0,
        "ImmediateBlockThreshold": 1.0,
        "ActionPolicyName": "logonly",
        "BypassTriggerConditions": true,
        "Tags": [
          "demo",
          "logging",
          "fast-path-only"
        ]
      }
    },
    "ActionPolicies": {
      "logonly": {
        "Description": "Log all detections but allow all traffic",
        "AllowAction": {
          "Enabled": true
        },
        "BlockAction": {
          "Enabled": false
        },
        "LogAction": {
          "Enabled": true,
          "LogLevel": "Information",
          "IncludeSignature": true
        }
      }
    },
    "VersionAge": {
      "Enabled": true,
      "FallbackBrowserVersions": {
        "Chrome": 143,
        "Firefox": 146,
        "Safari": 26,
        "Edge": 143,
        "Opera": 115,
        "Brave": 143,
        "Vivaldi": 7
      }
    }
  }
}
